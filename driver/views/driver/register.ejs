<%- include("../partials/header") %>

<%- include("../partials/nav") %>

    <style>
        img{
            margin-top: 15px;
            height: 110px;
            width: auto;
        }

        .register{
            border: none;
            padding: 10px;
            font-size: large;
        }

        btn:hover{
            background-color: black;
        }

    </style>

   <script type="text/javascript" src="nav.js"></script>

    <div class="container">

        <div class="row">

            <div class="col">

            </div>
            <div class="col-6">
                <div class="card" style="width: 100%; margin-bottom: 40px;">
                    <img src="/images/avatar.svg" class="card-img-top my-avatar" alt="...">
                    <div class="card-body">
                        <%- include ("../partials/messages") %>

                      <h5 class="card-title">Register !</h5>
                      <p class="card-text">
                        <form action="/driver/register" method="POST">
                            <div class="form-group">
                                <label for="name">Name</label>
                                 <input type="text" class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                 <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                 <input type="number" class="form-control" id="phone" name="phone" value="<%= typeof phone != 'undefined' ? phone : '' %>">
                            </div>
                            
                            <div class="form-group">
                                <label for="License">License Number</label>
                                 <input type="text" class="form-control" id="license" name="license" pattern="^[A-z]{2}[0-9]{13}$" value="<%= typeof license != 'undefined' ? license : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="carName">Car Model</label>
                                 <input type="text" class="form-control" id="carName" name="carName" value="<%= typeof carName != 'undefined' ? carName : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="regNo">Registration Number</label>
                                 <input type="text" class="form-control" id="regNo" name="regNo" value="<%= typeof license != 'undefined' ? license : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                              </div>
                              <div class="form-group">
                                <label for="password2">Re-Enter Password</label>
                                <input type="password" class="form-control" id="password2" name="password2">
                              </div>
                              
                            <button type="submit" class="btn btn-primary register">Register</button>
    
                        </form>
    

                      </p>
                    </div>
                  </div>
            </div>
            <div class="col">

            </div>
        </div>

    </div>
    
</body>
</html>

<%- include("../partials/footer") %>
